<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddTasksFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/new_task_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:fontFamily="@font/oregano"
            android:text="@string/new_task"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editTextTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_task_text"
            android:ems="10"
            android:inputType="text|textCapCharacters"
            android:text="Task Name"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/priority_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="@font/oregano"
            android:text="Priority"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/editTextTaskName"/>

        <RadioGroup
            android:id="@+id/RadioGroupdHL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTaskName"
            android:layout_toRightOf="@id/priority_text"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/High"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oregano"
                android:textSize="20dp"
                android:textOn="High"
                android:textOff="High"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/Low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oregano"
                android:textSize="20dp"
                android:textOn="Low"
                android:textOff="Low"/>
        </RadioGroup>


    </RelativeLayout>

</FrameLayout>